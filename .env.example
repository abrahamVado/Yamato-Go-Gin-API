# Yamato API environment configuration example
APP_NAME=YamatoAPI # Human-readable application name for logs and UIs
APP_ENV=development # Application environment (development|staging|production)
APP_DEBUG=true # Enable verbose debug logging (true|false)
APP_HOST=0.0.0.0 # Interface the HTTP server binds to
APP_PORT=8080 # Port the HTTP server listens on
APP_URL=http://localhost:8080 # Base URL exposed to clients

# Database configuration
DATABASE_DSN=postgres://yamato_user:change-me@localhost:5432/yamato_db?sslmode=disable # Full database DSN (placeholder credentials)
DB_HOST=localhost # Database host name
DB_PORT=5432 # Database port
DB_USER=yamato_user # Database user (non-privileged placeholder)
DB_PASSWORD=change-me # Database user password placeholder (do not commit real secrets)
DB_NAME=yamato_db # Database name
DB_MAX_OPEN_CONNS=20 # Maximum number of open DB connections
DB_MAX_IDLE_CONNS=5 # Maximum number of idle DB connections
DB_CONN_MAX_LIFETIME=300s # Maximum lifetime of a connection before recycling
DB_SSL_MODE=disable # SSL mode for database connection (disable|require|verify-full)

# Redis configuration
REDIS_HOST=localhost # Redis server hostname
REDIS_PORT=6379 # Redis server port
REDIS_USERNAME=default # Redis username if ACL is enabled
REDIS_PASSWORD=change-me # Redis password placeholder
REDIS_DB=0 # Redis database index
REDIS_TLS_ENABLED=false # Enable TLS connections to Redis (true|false)

# JWT and authentication
JWT_SECRET=replace-with-32-char-secret # Symmetric JWT signing secret placeholder
JWT_EXPIRATION_MINUTES=60 # Access token expiration time in minutes
REFRESH_TOKEN_TTL_HOURS=720 # Refresh token lifetime in hours
PASSWORD_RESET_TOKEN_TTL_MINUTES=30 # Password reset token lifetime in minutes
SESSION_IDLE_TIMEOUT_MINUTES=15 # Session idle timeout in minutes before re-authentication

# Rate limiting
RATE_LIMIT_REQUESTS=100 # Max requests allowed in the sliding window
RATE_LIMIT_WINDOW_SECONDS=60 # Sliding window size in seconds
RATE_LIMIT_BURST=20 # Additional burst capacity for traffic spikes
RATE_LIMIT_WHITELIST=127.0.0.1 # Comma-separated IPs exempt from rate limiting

# Email sender configuration
SMTP_HOST=localhost # SMTP server hostname
SMTP_PORT=1025 # SMTP server port
SMTP_USERNAME=yamato-smtp-user # SMTP server username placeholder
SMTP_PASSWORD=change-me # SMTP server password placeholder
SMTP_ENCRYPTION=none # SMTP encryption mode (none|starttls|tls)
EMAIL_FROM_ADDRESS=no-reply@example.com # Default From email address
EMAIL_FROM_NAME=Yamato Notifications # Default From email display name

# IP allowlist
IP_ALLOWLIST_ENABLED=false # Toggle to enforce IP allowlist (true|false)
IP_ALLOWLIST=127.0.0.1,192.168.1.10 # Comma-separated list of allowed IPs when enabled

# Internationalization and localization
DEFAULT_LOCALE=en # Default locale for content
SUPPORTED_LOCALES=en,ja,es # Comma-separated list of supported locales
FALLBACK_LOCALE=en # Locale used when requested locale is unavailable
LOCALE_NEGOTIATION_STRATEGY=header # Strategy for locale selection (header|query|cookie)

# Background jobs and queues
QUEUE_DRIVER=redis # Queue driver (redis|sqs|memory)
QUEUE_CONCURRENCY=5 # Number of concurrent background workers
QUEUE_RETRY_LIMIT=3 # Number of retries for failed jobs before dead-lettering

# Observability
LOG_LEVEL=info # Logging level (debug|info|warn|error)
TRACE_EXPORTER=stdout # Tracing exporter destination (stdout|otlp)
METRICS_ENABLED=true # Enable metrics collection (true|false)
METRICS_EXPORTER=prometheus # Metrics exporter backend (prometheus|otlp)

# Miscellaneous
TIMEZONE=UTC # Application default timezone
MAX_UPLOAD_SIZE_MB=10 # Maximum upload size in megabytes
MAINTENANCE_MODE=false # Set to true to enable maintenance mode banner
PUBLIC_URL_WHITELIST=https://example.com,https://staging.example.com # Comma-separated list of allowed public origins
